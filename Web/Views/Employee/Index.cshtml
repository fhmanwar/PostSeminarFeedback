
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

@section Style{
    <link href="~/css/star-rating-svg.css" rel="stylesheet" />
    <link href="~/css/Style.css" rel="stylesheet" />
}

@section pageHeader{
    <ul class="breadcrumbs">
        <li class="nav-home"><a href="/"><i class="flaticon-home"></i></a></li>
        <li class="separator"><i class="flaticon-right-arrow"></i></li>
        <li class="nav-item"><a href="/employee">@ViewData["Title"]</a></li>
        <li class="separator"><i class="flaticon-right-arrow"></i></li>
        <li class="nav-item"><a href="#">Feedback</a></li>
    </ul>
}


<div class="row">
    <div class="col-md-12">
        <div class="card card-with-nav">
            <div class="card-header">
                <div class="row row-nav-line">
                    <ul class="nav nav-tabs nav-line nav-color-secondary" role="tablist">
                        <li class="nav-item"> <a class="nav-link active show" data-toggle="tab" href="#home" role="tab" aria-selected="true">Feedback</a> </li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="row mt-3">
                    <div class="col-md-4">
                        <div class="form-group form-group-default">
                            <label>Trainer</label>
                            <select class="form-control" id="TrainerOption"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-group-default" id="cekTitle">
                            <label>Training Title</label>
                            <select class="form-control" id="TrainOption"></select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-group-default" id="cekschedule">
                            <label>Date</label>
                            <input type="date" id="ScheduleDate" class="form-control" readonly>
                        </div>
                    </div>
                </div>

                <div class="row mt-3 mb-1">
                    <div class="col-md-12">
                        <div id="dataQuest"></div>
                        <!--<div class="form-group">
                            <p class="form-control-static" id="QuestionP"></p>
                        </div>
                        <div class="row flex-row justify-content-center">-->
